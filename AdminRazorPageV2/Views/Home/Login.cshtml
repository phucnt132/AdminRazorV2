@{
    ViewData["Title"] = "Login Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #login .container #login-row #login-column #login-box {
        margin-top: 120px;
        max-width: 600px;
        height: 320px;
        border: 1px solid #9C9C9C;
        background-color: #EAEAEA;
    }

    #login .container #login-row #login-column #login-box #login-form {
        padding: 20px;
    }

    #login .container #login-row #login-column #login-box #login-form #register-link {
        margin-top: -85px;
    }
</style>

<div id="login" class="mt-5 mb-5">
    <div id="login-row" class="row justify-content-center align-items-center">
        <div id="login-column" class="col-md-6 fadeInDown" style="background-color: aliceblue; padding: 28px; border-radius: 12px;">
            <div id="login-box" class="col-md-12">
                <form asp-action="Login" asp-controller="Home" method="post" accept-charset="UTF-8" role="form">
                    <h3 class="text-center text-info fadeIn first">Login Admin</h3>
                    <div class="form-group">
                        <label for="username" class="text-info">Username:</label><br>
                        <input type="text" name="username" id="username" class="form-control fadeIn second">
                    </div>
                    <div class="form-group">
                        <label for="password" class="text-info">Password:</label><br>
                        <input type="password" name="password" id="password" class="form-control fadeIn third">
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-info btn-md fadeIn fourth" value="Login">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@using DTOs.EpisodeDTOs.RequestDTO;
@using DTOs.MovieDTOs.ResponseDTO;
@model AddEpisodeDto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<MovieResponse> movieData = ViewBag.MovieData;
}

<h1 class="">Create Episode</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MovieId" class="control-label"></label>
                <select asp-for="MovieId" class="form-control" style="border: 1px solid #ced4da;">
                    @foreach (var item in movieData)
                    {
                        <option value="@item.MovieId">@item.MovieName</option>
                    }
                </select>
                <span asp-validation-for="MovieId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EpisodeName" class="control-label"></label>
                <input asp-for="EpisodeName" class="form-control" style="border: 1px solid #ced4da;" required />
                <span asp-validation-for="EpisodeName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" style="border: 1px solid #ced4da;" required />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group" style="display:flex;flex-direction:column;gap:0.5rem;">
                <div>
                    <input type="radio" name="IsActive" value="true" /> Episode will be public for client
                </div>

                <div>
                    <input type="radio" name="IsActive" value="false" /> Episode is not public for client
                </div>
            </div>

            <div class="form-group">
                <label asp-for="MediaLink" class="control-label"></label>
                <input asp-for="MediaLink" class="form-control" style="border: 1px solid #ced4da;" required />
                <span asp-validation-for="MediaLink" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
